<div class="container">
  <div class="row">
    <div class="col-xs-offset-3 col-xs-6 col-sm-offset-3 col-sm-6 col-md-6">
      <div class="flat-form">
        <h2>Add a new place</h2>

        <%= simple_form_for [@flat] do |f| %>
          <div class="form-inputs">
            <%= f.input :name %>
            <%= f.input :address %>

            <%= f.input :description %>
            <%= f.input :number_of_guests %>
            <%= f.input :picture_url %>
            <%= f.input :price_per_night %>
          </div>
            <div class="form-group">
              <%= f.submit :Submit, class: 'btn btn-danger' %>
              <%= link_to "Cancel", new_flat_path, class: 'btn btn-primary'%>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
